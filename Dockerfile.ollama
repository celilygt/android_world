# AndroidWorld with Ollama Support
# This Dockerfile sets up AndroidWorld with Ollama for local LLM inference
FROM ubuntu:22.04

# Set non-interactive mode for apt
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    wget \
    git \
    build-essential \
    openjdk-11-jdk \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Set JAVA_HOME
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64

# Install Android SDK
ENV ANDROID_SDK_ROOT=/opt/android-sdk
RUN mkdir -p ${ANDROID_SDK_ROOT} && cd ${ANDROID_SDK_ROOT} && \
    wget -q https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip && \
    unzip commandlinetools-linux-9477386_latest.zip && \
    rm commandlinetools-linux-9477386_latest.zip && \
    mkdir -p cmdline-tools/latest && \
    mv cmdline-tools/* cmdline-tools/latest/ 2>/dev/null || true

# Add Android SDK to PATH
ENV PATH=${PATH}:${ANDROID_SDK_ROOT}/cmdline-tools/latest/bin:${ANDROID_SDK_ROOT}/platform-tools:${ANDROID_SDK_ROOT}/emulator

# Accept Android SDK licenses
RUN yes | sdkmanager --licenses

# Install platform tools and emulator
RUN sdkmanager "platform-tools" "emulator" "system-images;android-34;google_apis;x86_64"

# Set up Python environment
WORKDIR /app
COPY requirements.txt .
RUN pip3 install -r requirements.txt

# Copy AndroidWorld code
COPY . .

# Create a script to start Ollama and pull the model
RUN echo '#!/bin/bash\n\
set -e\n\
echo "Starting Ollama..."\n\
ollama serve &\n\
OLLAMA_PID=$!\n\
sleep 5\n\
echo "Pulling gemma3:4b model..."\n\
ollama pull gemma3:4b\n\
echo "Ollama setup complete!"\n\
wait $OLLAMA_PID\n\
' > /start-ollama.sh && chmod +x /start-ollama.sh

# Create a script to run the benchmark
RUN echo '#!/bin/bash\n\
set -e\n\
echo "Starting Ollama in background..."\n\
ollama serve &\n\
OLLAMA_PID=$!\n\
sleep 5\n\
echo "Checking if model exists..."\n\
if ! ollama list | grep -q "gemma3:4b"; then\n\
    echo "Pulling gemma3:4b model..."\n\
    ollama pull gemma3:4b\n\
fi\n\
echo "Running AndroidWorld benchmark..."\n\
./run_benchmark.sh "$@"\n\
kill $OLLAMA_PID 2>/dev/null || true\n\
' > /run-benchmark.sh && chmod +x /run-benchmark.sh

# Expose Ollama port
EXPOSE 11434

# Default command
CMD ["/start-ollama.sh"] 